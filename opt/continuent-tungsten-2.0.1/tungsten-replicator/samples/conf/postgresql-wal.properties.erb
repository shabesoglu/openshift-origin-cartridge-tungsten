####################################
# SAMPLE.POSTGRESQL-WAL.PROPERTIES #
####################################
#
# This file contains properties for WAL-based PostgreQL replication. 

# Enable streaming replication (available from PostgreSQL 9)?
postgresql.streaming_replication=<%= ENV['OPENSHIFT_TUNGSTEN_REPL_PG_STREAMING'] %>

# Port of current PostgreSQL.
postgresql.port=<%= ENV['OPENSHIFT_TUNGSTEN_APPLIER_REPL_DBPORT'] %>

# PostgreSQL home directory. 
postgresql.data=<%= ENV['OPENSHIFT_TUNGSTEN_APPLIER_REPL_PG_HOME'] %>

# PostgreSQL configuration file. 
postgresql.conf=<%= ENV['OPENSHIFT_TUNGSTEN_APPLIER_REPL_PG_CONF'] %>

# Standard archive log directory. 
postgresql.archive=<%= ENV['OPENSHIFT_TUNGSTEN_APPLIER_REPL_PG_ARCHIVE'] %>

# Master host name. 
postgresql.master.host=<%= ENV['OPENSHIFT_TUNGSTEN_REPL_MASTERHOST'] %>
postgresql.master.port=<%= ENV['OPENSHIFT_TUNGSTEN_APPLIER_REPL_DBPORT'] %>

# Master database administrator user name and password. 
postgresql.master.user=<%= ENV['OPENSHIFT_TUNGSTEN_APPLIER_REPL_DBLOGIN'] %>
postgresql.master.password=<%= ENV['OPENSHIFT_TUNGSTEN_APPLIER_REPL_DBPASSWORD'] %>

# Database role.  Acceptable values are 'master' and 'standby'. 
postgresql.role=<%= ENV['OPENSHIFT_TUNGSTEN_REPL_PG_WAL_ROLE'] %>

# PostgreSQL boot command.  The postgres user must be able to execute 
# this command without a password.  The script must accept standard 
# stop/start/restart options. 
postgresql.boot.script=<%= ENV['OPENSHIFT_TUNGSTEN_APPLIER_REPL_BOOT_SCRIPT'] %>

# Archive timeout.  Maximum time before sending an unfilled WAL buffer to 
# standby.  This is your maximum data loss.  
postgresql.archive_timeout=<%= ENV['OPENSHIFT_TUNGSTEN_REPL_PG_ARCHIVE_TIMEOUT'] %>

# Location of pg_standby executable. 
postgresql.pg_standby=<%= ENV['OPENSHIFT_TUNGSTEN_REPL_PG_STANDBY'] %>

# Location of archive cleanup command (for SR).
postgresql.pg_archivecleanup=<%= ENV['OPENSHIFT_TUNGSTEN_REPL_PG_ARCHIVECLEANUP'] %>

# Location of pg_standby trigger file. 
postgresql.pg_standby.trigger=<%= ENV['OPENSHIFT_TUNGSTEN_REPL_PG_STANDBYTRIGGER'] %>

# Command prefix used for root commands.  'sudo' is most common for 
# non-priveged accounts. 
postgresql.root.prefix=<%= ENV['OPENSHIFT_TUNGSTEN_ROOT_PREFIX'] %>
