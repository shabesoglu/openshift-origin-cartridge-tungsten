# Make MySQL read-only
mysql -h<%= ENV['TUNGSTEN_APPLIER_REPL_DBHOST'] %> --port=<%= ENV['TUNGSTEN_APPLIER_REPL_DBPORT'] %> -u<%= ENV['TUNGSTEN_APPLIER_REPL_DBLOGIN'] %> -p<%= ENV['TUNGSTEN_APPLIER_REPL_DBPASSWORD'] %> -e "SET GLOBAL read_only = $1;"
mysql -h<%= ENV['TUNGSTEN_APPLIER_REPL_DBHOST'] %> --port=<%= ENV['TUNGSTEN_APPLIER_REPL_DBPORT'] %> -u<%= ENV['TUNGSTEN_APPLIER_REPL_DBLOGIN'] %> -p<%= ENV['TUNGSTEN_APPLIER_REPL_DBPASSWORD'] %> -e "SHOW VARIABLES LIKE '%read_only%';"
