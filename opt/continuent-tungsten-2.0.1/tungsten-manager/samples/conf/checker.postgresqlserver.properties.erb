##########################################
# CHECKER.POSTGRESQLSERVER.PROPERTIES    #
##########################################

name=postgresql_response
class=com.continuent.tungsten.monitor.checkers.PGWALChecker

# delay between each monitoring run - default 3000ms
frequency=<%= ENV['OPENSHIFT_TUNGSTEN_MGR_MONITOR_INTERVAL'] %>
# connection will be renewed after this period
reconnectAfter=30000
serverName=<%= ENV['OPENSHIFT_TUNGSTEN_HOST_HOST'] %>
host=<%= ENV['OPENSHIFT_TUNGSTEN_HOST_HOST'] %>
vendor=<%= ENV['OPENSHIFT_TUNGSTEN_APPLIER_REPL_DBJDBCVENDOR'] %>
driver=<%= ENV['OPENSHIFT_TUNGSTEN_APPLIER_REPL_DBJDBCDRIVER'] %>
url=jdbc:postgresql://<%= ENV['OPENSHIFT_TUNGSTEN_APPLIER_REPL_DBHOST'] %>:<%= ENV['OPENSHIFT_TUNGSTEN_APPLIER_REPL_DBPORT'] %>/<%= ENV['OPENSHIFT_TUNGSTEN_APPLIER_REPL_DBLOGIN'] %>
username=<%= ENV['OPENSHIFT_TUNGSTEN_APPLIER_REPL_DBLOGIN'] %>
password=<%= ENV['OPENSHIFT_TUNGSTEN_APPLIER_REPL_DBPASSWORD'] %>
query=select 1
